<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookKeeper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookKeeper"
    xmlns:views="clr-namespace:BookKeeper.Views">

    <TabBar>
       <Tab x:Name="RecordsPage"
            Title="Records"
            Icon="doc.png">
           <ShellContent ContentTemplate="{DataTemplate views:RecordsPage}" />
       </Tab>
       <Tab x:Name="SearchPage"
            Title="Search"
            Icon="search_doc.png">
           <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
       </Tab>
       <Tab Route="SummaryPage"
            Title="Summary"
            Icon="calendar.png">
           <ShellContent ContentTemplate="{DataTemplate views:SummaryPage}" />
       </Tab>
       <Tab Route="AccountPage"
            Title="Books"
            Icon="book.png">
           <ShellContent ContentTemplate="{DataTemplate views:AccountPage}" />
       </Tab>
    </TabBar>

</Shell>

